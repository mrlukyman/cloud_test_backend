{
  "name": "typescript-graphql",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon",
    "build": "rimraf ./build && tsc && docker build -t backend_boilerplate . && docker-compose up",
    "start": "yarn build && node build/index.js",
    "migrate": "npx prisma migrate dev",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@prisma/client": "4.8.1",
    "apollo-server": "3.11.1",
    "cors": "^2.8.5",
    "graphql": "16.6.0",
    "graphql-scalars": "1.20.1",
    "nodemon": "^2.0.20",
    "rimraf": "^4.0.4"
  },
  "devDependencies": {
    "@types/graphql": "14.5.0",
    "@types/node": "18.11.18",
    "@types/ws": "8.5.4",
    "prisma": "4.8.1",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.9.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
